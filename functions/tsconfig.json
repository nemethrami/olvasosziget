{
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
