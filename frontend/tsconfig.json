{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@services/*": ["services/*"],
      "@components/*": ["components/*"],
      "@config/*": ["config/*"],
      "@assets/*": ["assets/*"],
      "@pages/*": ["pages/*"],
      "@models/*": ["models/*"],
      "@tests/*": ["tests/*"]
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
  },
  "include": [
    "../functions/**/*",
    "./src/**/*",
    "./src/services/*",
    "./src/components/*",
    "./src/config/*",
    "./src/assets/*",
    "./src/pages/*",
    "./src/tests/*",
    "./src/models/*",
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
